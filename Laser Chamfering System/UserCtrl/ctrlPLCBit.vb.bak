            dgvPLCBitData.Rows(i).Cells(2).Value = ""
        Next

        nBoardIdPLC = nIndex + 1
        btnPLCBit.Text = "PLC_Bit"
        fnBtnSelect(0, 0)

        Return True

        Exit Function
SysErr:
        Return False
    End Function

